  <script type="text/javascript">
    //Google Translate feature
    function googleTranslateElementInit() {
      new google.translate.TranslateElement({ pageLanguage: 'en' }, 'google_translate_element');
    }
    var i = 0; 			// Start Point
    var images = [];	// Images Array
    var time = 6000;	// Time Between Switch

    // Image List

    images[0] = "images/plant_image1.jpg";
    images[1] = "images/plant_image2.jpg";
    images[2] = "images/plant_image3.jpg";
    images[3] = "images/plant_image4.jpg";
    images[4] = "images/plant_image5.jpg";
    // Change Image
    function changeImg() {
      document.slide.src = images[i];
      // Check If Index Is Under Max
      if (i < images.length - 1) {
        // Add 1 to Index
        i++;
      } else {
        // Reset Back To O
        i = 0;
      }
      // Run function every x seconds
      setTimeout("changeImg()", time);
    }
    // Run function when page loads
    window.onload = changeImg;

    $(document).ready(() => {
      const plantData = $("#plantData").data("plant");
      $("#plantNameHeader").text(plantData.name);
      //$("#plantWateringInfo").text(plantData.waterFrequency);
      $("#plantSunlightInfo").text(plantData.sunFrequency);
      $("#plantFertilizerInfo").text(plantData.fertilizerFrequency);
      $("#plantNativeRegionInfo").text(plantData.nativeRegion);
      $("#plantSeedLink").attr("href", plantData.seedLink);
      images = ["../" + plantData.images]
      $("#newPlantLink").attr("href", "/new_plant/" + plantData.id)
    });
  </script>
