    });
  </script>

  <!-- @chloemjones: Script to hide certain information based on user's experience level -->
  <script>
    $(document).ready(() => {
      $.ajax({
        url: "/getCurrentXP",
        type: 'GET',
        success: (data) => {
          if (data.experience == "Beginner") {
            $("#companion_planting").hide();
            $("#composting").hide();
          }
          if (data.experience == "Intermediate") {
            $("#composting").hide();
          }
        }
      })
    })
